{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "languageVersion": "2.0",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "dev",
      "templateHash": "12161987174832339150"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "csadminSshKey": {
      "type": "string"
    },
    "customData": {
      "type": "string",
      "defaultValue": ""
    },
    "subnetId": {
      "type": "string"
    },
    "userAssignedIdentity": {
      "type": "string"
    }
  },
  "resources": {
    "pip": {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2020-05-01",
      "name": "cycleserver-pip",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    "nic": {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2020-05-01",
      "name": "cycleserver-nic",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('subnetId')]"
              },
              "publicIPAddress": {
                "id": "[resourceInfo('pip').id]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "pip"
      ]
    },
    "vm": {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2020-06-01",
      "name": "cycleserver",
      "location": "[parameters('location')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', parameters('userAssignedIdentity'))]": {}
        }
      },
      "properties": {
        "osProfile": {
          "computerName": "CycleServer",
          "adminUsername": "csadmin",
          "customData": "[base64(parameters('customData'))]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": true,
            "ssh": {
              "publicKeys": [
                {
                  "path": "/home/csadmin/.ssh/authorized_keys",
                  "keyData": "[parameters('csadminSshKey')]"
                }
              ]
            }
          }
        },
        "hardwareProfile": {
          "vmSize": "Standard_D8s_v3"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "OpenLogic",
            "offer": "CentOS",
            "sku": "8_2",
            "version": "latest"
          },
          "osDisk": {
            "name": "cycleserver-os",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "StandardSSD_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceInfo('nic').id]"
            }
          ]
        }
      },
      "dependsOn": [
        "nic"
      ]
    }
  }
}